@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["BẢN GHI HOẠT ĐỘNG TRỤ SẠC"];
    ViewData["MainMenu"] = "Giám sát";
}

@section VendorCSS {

}

    <div class="row clearfix">

        <div class="col-lg-12 col-md-12">
            <div class="card planned_task">
                <div class="body">
                    <div class="table-responsive">
                        <table class="table m-b-0 table-striped table-hover" id="myTable">
                            <thead>
                                <tr>
                                    <th>ID Trục sạc </th>
                                    <th>ID Súng sạc</th>
                                    <th>Nội dung</th>
                                    <th>Kết quả</th>
                                    <th>Mã lỗi</th>
                                    <th>Thời gian</th>
                                </tr>
                            </thead>
                            <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in (IEnumerable<MessageLog>)Model)
                                {
                                    <tr>
                                        <td><span class="badge badge-success">@item.ChargePointId</span></td>
                                        <td><span class="badge badge-warning">@item.ConnectorId</span></td>
                                        <td>
                                            @item.Message
                                        </td>
                                        <td>@item.Result</td>
                                        <td>@item.ErrorCode</td>
                                        <td>@item.LogTime.AddHours(7)</td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

</div>

<script src="~/vendor/jquery/jquery-3.3.1.min.js"></script>
