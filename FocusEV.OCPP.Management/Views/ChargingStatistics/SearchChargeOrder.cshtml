        function owchange() {
            //Load data for Trạm sạc
            var param = {
                "OwnerId": $("#slOnwer").val(),
            }
            $.ajax({
                url: '/ChargingStatistics/LoadChargeStation',
                dataType: 'html',
                data: param,
                success: function (data, status, xhr) {
                    $("#slChargeStation").html(data);
                    $("#slChargeStation").val(0).change();
                   
                },
                error: function (xhr, status, error) {
                    alert(status);
                }
            });
        }
        $(document).ready(function(){
            $("#todate").datepicker({
                format: 'dd/mm/yyyy'
            });
            var today = new Date();
            // Định dạng ngày hiện tại
            var formattedDate = today.getDate() + '/' + (today.getMonth() + 1) + '/' + today.getFullYear();
            $("#todate").val(formattedDate).change();
            owchange();
        })
          function cschange(){
            var param = {
                "ChargeStationId": $("#slChargeStation").val(),
            }
            $.ajax({
                url: '/ChargingStatistics/LoadChargePoint',
                dataType: 'html',
                data: param,
                success: function (data, status, xhr) {
                    $("#slChargePint").html(data);
                    $("#slChargePint").val(0).change();

                    callResult();
                },
                error: function (xhr, status, error) {
                    alert(status);
                }
            });
          }

          function callResult()
          {
            var param = {
                "OwnerId": $("#slOnwer").val(),
                "ChargeStationId": $("#slChargeStation").val(),
                "ChargePointId": $("#slChargePint").val(),
                "FromDate": $("#fromdate").val(),
                "ToDate": $("#todate").val(),
            }
            $.ajax({
                url: '/ChargingStatistics/SearchData',
                dataType: 'html',
                data: param,
                success: function (data, status, xhr) {
                      $('.dvResult').show();
                      $('.dvResult').html(data)
                },
                error: function (xhr, status, error) {
                    alert(status);
                }
            });
          }



