@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<!doctype html>
<html lang="en">

<head>
    <title>@ViewData["Title"] - FocusEV - Charge Station Management</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <meta name="description" content="FocusEV Charging Station Management platform">
    <meta name="author" content="FocusEV, design by: INSITU Co., Ltd">

    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
    <!-- VENDOR CSS -->
    <link rel="stylesheet" href="~/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/vendor/font-awesome/css/font-awesome.min.css">
    @RenderSection("VendorCSS", required: false)
    <!-- MAIN CSS -->
    <link rel="stylesheet" href="~/css/focusev.css">

</head>

<body>

    <!-- Page Loader -->
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="m-t-30"><img src="~/images/logo.png" width="48" height="48" alt="FocusEV"></div>
            <p>Please wait...</p>
        </div>
    </div>
    <!-- Overlay For Sidebars -->

    <div id="wrapper">
        @if (this.User != null && this.User.Identity != null && this.User.Identity.IsAuthenticated)
        {
            @if (this.User.IsInRole(Constants.AdminRoleName))
            {
                <nav class="navbar navbar-fixed-top">
                    <partial name="_navbar" />
                </nav>

                <div id="left-sidebar" class="sidebar">
                    <partial name="_sidebarPolytex" />
                </div>
            }
            else
            {
                <nav class="navbar navbar-fixed-top">
                    <partial name="_navbar" />
                </nav>

                <div id="left-sidebar" class="sidebar">
                    <partial name="_sidebarPolytex" />
                </div>
            }

        } 
        <div id="main-content">
            <div class="container-fluid">
                <div class="block-header">
                    <partial name="_breadcrumb" />
                </div>
                @RenderBody()
            </div>
        </div>

    </div>
    <!-- Javascript -->

    <script src="~/bundles/libscripts.bundle.js"></script>
    <script src="~/bundles/vendorscripts.bundle.js"></script>

    <script src="~/bundles/mainscripts.bundle.js"></script>

    <script src="~/lib/bootstrap-dialog/bootstrap-dialog.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
