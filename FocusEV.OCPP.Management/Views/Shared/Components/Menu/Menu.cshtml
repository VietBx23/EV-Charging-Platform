<sidebar class="">

    <div class="user-account">
        @if (ViewBag.Account != null && ViewBag.Account.Images != null)
        {
            <img src="~/images/Account/@ViewBag.Account.Images" class="rounded-circle user-photo" alt="User Profile Picture">

        }
        else
        {

            <img src="~/images/user.png" class="rounded-circle user-photo" alt="User Profile Picture">
        }

        <div class="dropdown">
            <span>Welcome,</span>
            @if(ViewBag.Account!=null){
                <a href="javascript:void(0);" class="dropdown-toggle user-name" data-toggle="dropdown"><strong>@ViewBag.Account.UserName</strong></a>
            }
           
            <ul class="dropdown-menu dropdown-menu-right account">
                <li><a asp-controller="Page" asp-action="Profile2"><i class="icon-user"></i>Thông tin tài khoản</a></li>
                <li><a asp-controller="App" asp-action="Inbox"><i class="icon-envelope-open"></i>Tin nhăn</a></li>
                <li><a href="javascript:void(0);"><i class="icon-settings"></i>Cấu hình</a></li>
                <li class="divider"></li>
                <li><a asp-controller="Account" asp-action="Logout"><i class="icon-power"></i>Đăng xuất</a></li>
            </ul>
        </div>
