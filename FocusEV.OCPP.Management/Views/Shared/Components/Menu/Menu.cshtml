    <!-- Tab panes -->
    <div class="tab-content p-l-0 p-r-0">
        <div class="tab-pane active" id="menu">
            <nav id="left-sidebar-nav" class="sidebar-nav">
                <ul id="main-menu" class="metismenu">
                    <li>
                        <a href="/" class="has-arrow"><i class="icon-home"></i> Home</a>
                    </li>
                    @if(Model!=null){
                        foreach(var item in (IEnumerable<Menu>)Model)
                            {
                            <li class="active">
                                <a href="@item.Href" class="has-arrow"><i class="@item.Icon"></i> <span>@item.Name</span></a>
                                @await Component.InvokeAsync("MenuChild",new {parentId=item.MenuId})
                            </li>
                        }
                    }
                   
                </ul>
            </nav>
        </div>
